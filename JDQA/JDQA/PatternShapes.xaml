            <Label HorizontalAlignment="Center">.</Label>
            <TextBox Width="20" MaxLength="2" x:Name="z1_8" KeyDown="moveIfMaxLength"></TextBox>
        </StackPanel>
        <StackPanel x:Name="z2" Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,0">
