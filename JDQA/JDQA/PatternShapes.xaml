            <TextBox Width="15" MaxLength="1" x:Name="z1_3" KeyDown="moveIfMaxLength"></TextBox>
            <Label HorizontalAlignment="Center">.</Label>
            <TextBox Width="20" MaxLength="2" x:Name="z1_4" KeyDown="moveIfMaxLength"></TextBox>
