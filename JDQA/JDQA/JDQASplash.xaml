<Page x:Class="JDQA.JDQASplash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JDQA"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      ShowsNavigationUI="False"
      Title="JDQASplash">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Width="200" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="0">
            <Border BorderBrush="#5a7fec" Width="200" BorderThickness="1,1,1,1">
                <Border.Background>
                    <SolidColorBrush Color="#5a7fec"/>
                </Border.Background>
                <TextBlock Foreground="White" TextWrapping="WrapWithOverflow" TextAlignment="Center" IsEnabled="False" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="20" FontWeight="Bold">JDQA Pattern Shape Analyzer</TextBlock>
            </Border>
            <Button Margin="30" Name="enterButton" Click="enterApplication" KeyDown="enterKeyDown">Enter</Button>
        </StackPanel>
    </Grid>
</Page>
