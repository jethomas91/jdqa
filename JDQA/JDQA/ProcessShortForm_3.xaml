<Page x:Class="JDQA.ProcessShortForm_3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JDQA"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ProcessShortForm_3">

    <Grid Name="ShortFormGrid">
        <StackPanel>
            <Label>Select the 1 darkened choice</Label>
            <StackPanel Orientation="Horizontal" Name="checkRow1"></StackPanel>
            <StackPanel Orientation="Horizontal" Name="checkRow2"></StackPanel>
            <StackPanel Orientation="Horizontal" Name="checkRow3"></StackPanel>
            <StackPanel Orientation="Horizontal" Name="checkRow4"></StackPanel>
            <StackPanel Orientation="Horizontal" Name="checkRow5"></StackPanel>
            <StackPanel Orientation="Horizontal" Name="checkRow6"></StackPanel>
            <Button Name="addMoreReuslts" HorizontalAlignment="Right" Margin="0,10,5,0">Add Another Form Result</Button>
            <Button Name="processFormEntries" HorizontalAlignment="Right" Click="processFormResults" Margin="0,20,5,0">Calculate Ideal Pattern Shape</Button>
        </StackPanel>
    </Grid>
</Page>
