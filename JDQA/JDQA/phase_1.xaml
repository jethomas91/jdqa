<Page x:Class="JDQA.Phase_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JDQA"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="phase_1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Width="500" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="0">
            <Button Click="downloadShortForm" Width="200">Download Short Form PDF</Button>
            <Label Height="40" Name="savedAs" Margin="0,10,0,0" HorizontalAlignment="Center" MinWidth="200"></Label>
            <Button Click="processShortForms" Width="200"  Name="ProcessResults">Process Results</Button>
            
        </StackPanel>
    </Grid>
</Page>
